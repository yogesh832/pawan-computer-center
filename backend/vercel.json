{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/index.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "/server.js"
    },
    {
      "src": "/(.*)", 
      "dest": "/index.html"
    }
  ]
}
